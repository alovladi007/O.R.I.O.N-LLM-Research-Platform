# ORION Platform Environment Variables
# Copy this file to .env and update with your values

# Application
ORION_ENV=development
ORION_DEBUG=true
ORION_LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=orion
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=orion_db

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_neo4j_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# MongoDB Configuration (optional)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=orion_documents

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=orion_materials

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=orion_admin
MINIO_SECRET_KEY=your_secure_minio_password
MINIO_BUCKET=orion-data

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
HUGGINGFACE_TOKEN=your_huggingface_token

# External APIs
MP_API_KEY=your_materials_project_api_key
PUBCHEM_API_KEY=your_pubchem_api_key
CHEMBL_API_KEY=your_chembl_api_key

# Security
JWT_SECRET_KEY=your_very_long_random_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL_TO=admin@example.com

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=your_grafana_admin_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Simulation Engines (paths on compute cluster)
VASP_EXECUTABLE=/opt/vasp/bin/vasp_std
VASP_POTCAR_PATH=/opt/vasp/potcars
QE_EXECUTABLE=/opt/qe/bin/pw.x
QE_PSEUDO_PATH=/opt/qe/pseudo
LAMMPS_EXECUTABLE=/opt/lammps/bin/lmp

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=orion-materials

# Google Cloud Configuration (if using GCS)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCS_BUCKET=orion-materials

# Azure Configuration (if using Azure Blob)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER=orion-materials